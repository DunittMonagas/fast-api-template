# Production Environment Example
APP_ENV=production
APP_NAME=FastAPI DDD Template
DEBUG=false

# API Configuration
API_PREFIX=/api/v1

# PostgreSQL Database
POSTGRES_USER=produser
POSTGRES_PASSWORD=strong_password_here
POSTGRES_DB=proddb
POSTGRES_HOST=your-db-host.com
POSTGRES_PORT=5432
POSTGRES_POOL_SIZE=50
POSTGRES_MAX_OVERFLOW=100

# Redis
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=redis_password_here
REDIS_POOL_SIZE=20

# External Services
TELEGRAM_BOT_TOKEN=your_production_telegram_bot_token
TELEGRAM_NOTIFICATION_CHAT_ID=your_production_chat_id
GOOGLE_API_KEY=your_production_google_api_key

# Consumer Configuration
RUN_CONSUMERS_IN_API=false  # Always false in production

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60 